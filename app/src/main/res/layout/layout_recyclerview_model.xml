<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerViewModel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:clickable="true"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="7dp"
        android:layout_marginVertical="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/dataImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/sample"
            android:layout_marginHorizontal="2dp"
            android:layout_marginVertical="2dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/dataTextViewName"
            style="@style/modelLayoutTxtViewTheme"
            app:layout_constraintBottom_toBottomOf="@id/dataImage"
            app:layout_constraintLeft_toLeftOf="@id/dataImage"
            app:layout_constraintRight_toRightOf="@id/dataImage"
            app:layout_constraintTop_toTopOf="@id/dataImage"
            app:layout_constraintVertical_bias="0.86" />

        <TextView
            android:id="@+id/dataTextViewDate"
            style="@style/modelLayoutTxtViewTheme"
            app:layout_constraintBottom_toBottomOf="@id/dataImage"
            app:layout_constraintLeft_toLeftOf="@id/dataImage"
            app:layout_constraintRight_toRightOf="@id/dataImage"
            app:layout_constraintTop_toTopOf="@id/dataImage"
            app:layout_constraintVertical_bias="0.93" />

        <TextView
            android:id="@+id/dataTextViewPriority"
            style="@style/modelLayoutTxtViewTheme"
            app:layout_constraintBottom_toBottomOf="@id/dataImage"
            app:layout_constraintLeft_toLeftOf="@id/dataImage"
            app:layout_constraintRight_toRightOf="@id/dataImage"
            app:layout_constraintTop_toTopOf="@id/dataImage"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>