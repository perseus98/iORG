<resources>
    <style name="Widget.App.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
        <item name="background">@color/colorMainBg</item>
    </style>

    <!--    Button-->
    <style name="AppBtn">
        <item name="android:textColor">@color/colorMainBg</item>
    </style>

    <style name="seekBar" parent="Widget.AppCompat.SeekBar.Discrete">
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="android:color">@color/exp1</item>
        <item name="android:colorAccent">@color/exp2</item>
    </style>

    <style name="MaterialTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/colorWhite</item>
        <item name="textAllCaps">true</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="boxStrokeColor">@color/colorWhite</item>
        <item name="android:state_focused">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="colorPrimary">@color/colorWhite</item>
    </style>

    <style name="styledatepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorMainBg</item>
        <item name="colorPrimaryDark">@color/colorMainSecBg</item>
        <item name="colorAccent">@color/colorMainBg</item>
    </style>

    <style name="styleEFAB" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="iconTint">@color/colorMainBg</item>
        <item name="android:textColor">@color/colorMainBg</item>
    </style>

    <style name="txtViewTheme">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginHorizontal">1dp</item>
        <item name="android:layout_marginVertical">1dp</item>
    </style>

    <style name="CreateActBtn" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorMainBg</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="background">@color/colorWhite</item>
        <item name="android:textColor">@color/colorMainBg</item>
        <item name="elevation">5dp</item>
        <item name="layout_scrollFlags">enterAlways|noScroll</item>
    </style>


</resources>
