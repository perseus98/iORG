<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/exp2</item>
        <item name="colorAccent">@color/colorMainBg</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!--    Button-->
    <style name="AppBtn">
        <item name="android:textColor">@color/colorMainBg</item>
    </style>

    <style name="seekBar" parent="Widget.AppCompat.SeekBar.Discrete">
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="android:color">@color/exp1</item>
        <item name="android:colorAccent">@color/exp2</item>
    </style>

    <style name="MaterialTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="textAllCaps">true</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="boxStrokeColor">@color/colorWhite</item>
        <item name="android:state_focused">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="colorPrimary">@color/colorWhite</item>
    </style>

    <style name="styledatepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorMainBg</item>
        <item name="colorPrimaryDark">@color/colorMainSecBg</item>
        <item name="colorAccent">@color/colorMainBg</item>
    </style>

    <style name="styleEFAB" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="backgroundTint">@color/colorEFAB</item>
        <item name="iconTint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
</resources>
